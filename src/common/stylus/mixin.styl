border-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    background: $color
    content: ''
    left: 0px
    bottom: -0.2px
    width: 100%
    height: 1px

border-none()
  &::after
    background: transparent
    height: 0px

bg-image($url)
  background-image: url('./img/' + $url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url('./img/' + $url + "@3x.png")
